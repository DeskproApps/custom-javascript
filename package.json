{
  "name": "@deskproapps/custom-javascript",
  "version": "0.3.1",
  "private": true,
  "dependencies": {
    "@deskpro/apps-components": "0.8.0",
    "@deskpro/apps-installer": "1.0.5",
    "@deskpro/apps-react-scripts": "0.3.4",
    "@deskpro/apps-sdk": "0.8.0",
    "changelog-verify": "^1.1.0",
    "handlebars": "^4.0.11",
    "history": "^4.7.2",
    "prop-types": "^15.6.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-router": "^4.3.1",
    "taboverride": "^4.0.3",
    "version-changelog": "^3.1.0"
  },
  "devDependencies": {
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "react-test-renderer": "^16.4.2"
  },
  "homepage": ".",
  "scripts": {
    "start": "PORT=31080 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "lint": "react-scripts eslint src test",
    "format": "react-scripts prettier --write \"{src,test}/**/*.js\"",
    "format:check": "react-scripts prettier --list-different \"{src,test}/**/*.js\"",
    "version": "version-changelog CHANGELOG.md && changelog-verify CHANGELOG.md && git add CHANGELOG.md"
  },
  "description": "Allows admins to use HTML, JavaScript, and CSS to create custom apps.",
  "author": {
    "name": "Deskpro Apps",
    "email": "apps@deskpro.com",
    "url": "https://www.deskpro.com"
  },
  "deskpro": {
    "version": "2.3.0",
    "title": "Custom JavaScript",
    "isSingle": true,
    "scope": "agent",
    "storage": [
      {
        "name": "settings",
        "isBackendOnly": false,
        "permRead": "EVERYBODY",
        "permWrite": "OWNER"
      }
    ],
    "targets": [
      {
        "target": "ticket-sidebar",
        "url": "index.html"
      },
      {
        "target": "install",
        "url": "install.html"
      }
    ],
    "settings": [
      {
        "name": "title",
        "defaultValue": "",
        "title": "The title displayed in the toolbar",
        "required": true,
        "type": "text"
      },
      {
        "name": "html",
        "defaultValue": "",
        "title": "The HTML rendered into the document",
        "required": true,
        "type": "textarea"
      },
      {
        "name": "css",
        "defaultValue": "",
        "title": "Inline CSS added to the document",
        "required": true,
        "type": "textarea"
      },
      {
        "name": "javascript",
        "defaultValue": "",
        "title": "Inline javascript added to the document",
        "required": true,
        "type": "textarea"
      },
      {
        "name": "assets",
        "defaultValue": "",
        "title": "Remote scripts and stylesheets added to the document. One URL per line",
        "required": true,
        "type": "textarea"
      }
    ],
    "deskproApiTags": [],
    "externalApis": [
      "/^https?://.*$/"
    ]
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "jsx-a11y/href-no-hash": "off"
    },
    "overrides": [
      {
        "files": "test/**/*.js",
        "env": {
          "jest": true
        }
      }
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  }
}
